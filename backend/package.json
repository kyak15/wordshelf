{
  "name": "wordshelf-backend",
  "version": "1.0.0",
  "description": "Express TypeScript API for Wordshelf",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node -r dotenv/config ./node_modules/.bin/node-pg-migrate --migrations-dir migrations --ignore-pattern '\\.md$'",
    "migrate:up": "npm run migrate -- up",
    "migrate:down": "npm run migrate -- down",
    "migrate:create": "npm run migrate -- create"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "pg": "^8.13.1",
    "resend": "^6.9.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "node-pg-migrate": "^8.0.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}